@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<main>
    <h1 class="text-center text-panda">Register</h1>
    <hr class="bg-panda w-50" style="height: 2px" />
    <form class="w-50 mx-auto" method="POST" asp-controller="Identity", asp-action="Register">
        <div class="form-group">
            <label asp-for="Input.Username" class="text-panda">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username..." asp-for="Input.Username"/>
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="text-panda">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email..." asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="text-panda">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password..." asp-for="Input.Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="text-panda">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password..." asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn bg-panda text-white" style="background: black">Register</button>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
