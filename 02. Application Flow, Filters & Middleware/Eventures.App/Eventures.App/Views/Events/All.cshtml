@model Eventures.App.Models.Events.EventViewModel[]
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">All Events</h1>
<div id="data-holder" class="w-75 mx-auto">
    <hr class="hr-2 bg-eventures" />
    <table class="table">
        <thead>
            <tr class="row mx-auto">
                <th class="col-md-1">#</th>
                <th class="col-md-5">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-2">Place</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Length; i++)
            {
                <tr class="row mx-auto">
                    <td class="col-md-1">@(i+1)</td>
                    <td class="col-md-5">@Model[i].Name</td>
                    <td class="col-md-2">@Model[i].Start</td>
                    <td class="col-md-2">@Model[i].End</td>
                    <td class="col-md-2">@Model[i].Place</td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="hr-2 bg-eventures" />
</div>
